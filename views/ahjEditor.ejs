                <option value="false" <%= ahjProperties.interconnection === false ? 'selected' : ''%> disabled>No</option>
            </select>
        </div>
        <% if (ahjProperties.ahjCode) { %>
            <form action="/ahjEditor/viewApplication" method="get">
        <% }else{ %>
            <form action="">
        <% } %>
            <div class="row mt-1">
                <label for="application" class="col-1">Application</label>
                <input name="application" id="application" type="text" value="<%- ahjProperties.ahjCode -%>" hidden>
                <button type="submit" class="form-control col ahjInfo" size="2"  >
                    View Application
                </button>
            </div>
        </form>
    </div>
<%- include('partials/footer') -%>
