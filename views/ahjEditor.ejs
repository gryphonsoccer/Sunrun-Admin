            <select class="form-control col ahjInfo"id="customerSignature" name="customerSignature" value="<%- ahjProperties.customerSignature -%>" readonly>
                <option value=""  disabled></option>
                <option value="true" <%= ahjProperties.customerSignature === true ? 'selected' : ''%> disabled>Yes</option>
                <option value="false" <%= ahjProperties.customerSignature === false ? 'selected' : ''%> disabled>No</option>
            </select>
        </div>
        <div class="row mt-1">
