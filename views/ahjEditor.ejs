<%- include('partials/header') -%>
<div class="text-center">
    <h1 class="">AHJ Editor</h1>
</div>
<% if (locals.messages.errors) { %>
    <% messages.errors.forEach( el => { %>
        <div class="alert alert-danger"><%= el.msg %></div>
    <% }) %>    
<% } %>
<% if (locals.messages.info) { %>
    <% messages.info.forEach( el => { %>
        <div class="alert alert-info"><%= el.msg %></div>
    <% }) %>    
<% } %>

<form action="/ahjEditor/viewAhj" method="get">
        <div class="row justify-content-around mt-2">
            <datalist id="ahjOfList">
                <% ahjOfList.forEach( el => { %>
                <option value="<%=el.ahjCode%>"><%=el.ahjCode%></option>
                <% }) %> 
            </datalist>
 
            <input type="text"list="ahjOfList"id="ahjCode" name="ahjCode"size="50"autocomplete="off" />
        </div>
        <div class="row justify-content-around mt-2">
            <% if(editAHJ){ %>
                <a href="/ahjEditor/saveAhjEdit" class="col-2 btn btn-success mt-2">Save</a>
            <% }else{ %>
                <button type="submit" class="col-2 btn btn-primary mt-2" id="viewAhjButton">View AHJ</button>
            <% } %>
        </div>
</form>
<form action="/ahjEditor/addAhj" method="get">
    <div class="row justify-content-around mt-2">
            <% if(ahjDrillDown && !editAHJ){ %>
                <input type="text" id="editAhj" name="editAhj"value='<%- ahjProperties.ahjCode -%>' hidden/>
                <button  class="col-2 btn btn-success mt-2"> Edit AHJ</button>
</form>
            <% }else if(ahjDrillDown && editAHJ){ %>
                    <a href="/ahjEditor" class="col-2 btn btn-primary mt-2"> Cancel</a>
            <% }else{ %>
                    <a href="/ahjEditor/addAhj" class="col-2 btn btn-primary mt-2">Add AHJ</a>
            <% } %> 
        </div>
        <div class="text-center">
            <h4 class=""><%- ahjProperties.ahjCode -%></h4>
        </div>
     
    <div>
        <div class="row mt-4">
            <label for="ahjName" class="col-1">AHJ</label>
            <input type="text" class="form-control col ahjInfo" id="ahjName" name="ahjName" value="<%- ahjProperties.ahjName -%>" readonly>
            <label for="govType" class="col-1">Jurisdiction Type</label>
            <input type="text" class="form-control col ahjInfo" id="govType" name="govType" value="<%- ahjProperties.govType -%>" readonly>
        </div>
        <div class="row mt-1">
            <label for="address" class="col-1">Address</label>
            <input type="text" class="form-control col ahjInfo" id="address" name="address" value="<%- ahjProperties.address -%>" readonly>
            <label for="city" class="col-1">City</label>
            <input type="text" class="form-control col ahjInfo" id="city" name="city" value="<%- ahjProperties.city -%>" readonly>
        </div>
        <div class="row mt-1">
            <label for="state" class="col-1">State</label>
            <input type="text" class="form-control col ahjInfo" size="2" id="state" name="state" value="<%- ahjProperties.state -%>" readonly>
            <label for="zip" class="col-1">ZIP</label>
            <input type="text" class="form-control col ahjInfo" id="zip" name="zip" value="<%- ahjProperties.zip -%>" readonly>
        </div>
        <div class="row mt-1">
            <label for="nec" class="col-1">NEC</label>
            <input type="number" class="form-control col ahjInfo" size="4" id="nec" name="nec" value="<%- ahjProperties.nec -%>" readonly>
            <label for="copies" class="col-1">Number of Copies</label>
            <input type="number" class="form-control col ahjInfo" size="1" id="copies" name="copies" value="<%- ahjProperties.copies -%>" readonly>
        </div>
        <div class="row mt-1">
            <label for="phone" class="col-1">Phone</label>
            <input type="tel" class="form-control col ahjInfo"id="phone" name="phone" value="<%- ahjProperties.phone -%>" readonly>
            <label for="email" class="col-1">Email</label>
            <input type="email" class="form-control col ahjInfo"id="email" name="email" value="<%- ahjProperties.email -%>" readonly>
        </div>
        <div class="row mt-1">
            <label for="url" class="col-1">AHJ url</label>
            <input type="url" class="form-control col ahjInfo"id="url" name="url" value="<%- ahjProperties.url -%>" readonly>
            <label for="inspectionNotes" class="col-1">Inspection Notes</label>
            <textarea type="text" class="form-control col ahjInfo"id="inspectionNotes" name="inspectionNotes" value="<%- ahjProperties.inspectionNotes -%>" readonly><%- ahjProperties.inspectionNotes -%></textarea>
        </div>
        <div class="row mt-1">
            <label for="deliverables" class="col-1">Deliverables</label>
            <select class="form-control col ahjInfo"id="deliverables" name="deliverables" value="<%- ahjProperties.deliverables -%>" readonly>
