<%- include('partials/header') -%>
<div class="text-center">
  <h1 class="">Edit Profile</h1>
</div>
<form action="/profile/saveProfile" method="post">
<main class="container">
    <div class="row justify-content-around mt-2">
        <button type="submit" class="col-3 btn btn-success" id="saveProfileButton"> Save Profile</button>
        <a href="/profile" class="col-3 btn btn-danger"> Cancel Edit</a>
    </div>
  </main>
  <div>
  <div class="row mt-4">
      <label for="fullName" class="col-1">Full Name</label>
      <input type="text" class="form-control col editProfile" id="fullName" name="fullName" value="<%- user.fullName -%>" >
      <label for="email" class="col-1">Email</label>
      <input type="email" class="form-control col editProfile" id="email" name="email" value="<%- user.email -%>" >
  </div>
  <div class="row mt-1">
      <label for="phone" class="col-1">Phone</label>
      <input type="tel" class="form-control col editProfile" id="phone" name="phone" value="<%- user.phone -%>" >
      <label for="branch" class="col-1">Branch</label>
      <input type="number" class="form-control col editProfile" id="branch" name="branch" value="<%- user.branch -%>">
  </div>
  </div>
</form>



<%- include('partials/footer') -%>
